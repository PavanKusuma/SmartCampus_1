<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/userImageHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/facultyUserImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_user_profile"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/facultyUserImageViewBG"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/user_image_bg"
                android:contentDescription="@string/app_name"
                android:layout_centerVertical="true" />



        </RelativeLayout>


        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:textColor="@color/lightBlue"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userImageHere"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/blackText"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"/>


        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_toRightOf="@+id/designation"
            android:layout_toLeftOf="@+id/ic_msg"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="4dp"/>


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ic_call"
            android:src="@drawable/ic_call"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"

            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ic_msg"
            android:src="@drawable/ic_message"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/ic_call"/>

    </RelativeLayout>




